<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="2dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivProduct_Images"
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

        <TextView

                android:id="@+id/tv_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembroke"
                android:textColor="@color/blackColor"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/ivProduct_Images"
        />
        <TextView
                android:id="@+id/tv_product_Category"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_products"
                android:textColor="@color/blackColor"
                android:layout_toRightOf="@id/ivProduct_Images"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_Cost"
                android:textSize="16dp"
                android:textColor="@color/blackColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivProduct_Images"
                android:layout_below="@id/tv_product_Category"
                android:layout_marginLeft="210dp"
        />

        <TextView

                android:id="@+id/tv_Quantity"
                android:textColor="@color/blackColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_Cost"
                android:layout_marginLeft="100dp"

        />


    </RelativeLayout>

</android.support.v7.widget.CardView>