<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        style="@style/Layout_margin"
        android:background="@color/RedColor">

    <TextView
            android:id="@+id/neoSTORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neostore"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="604dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="56dp"
    />



    <EditText

            style="@style/app_TextStyle"
            android:id="@+id/etEmail"
            android:background="@drawable/edit_text_style"
            android:hint="@string/username"
            android:textColor="@color/whiteColor"
            android:inputType="textEmailAddress"
            android:drawablePadding="@dimen/start_padding"
            android:drawableLeft="@drawable/username_icon"
            android:textColorHint="@color/whiteColor"
            android:paddingStart="@dimen/start_padding"
            android:paddingLeft="@dimen/start_padding"
            android:textSize="@dimen/editText_size"
            android:layout_marginBottom="502dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="68dp"/>

    <EditText

            style="@style/app_TextStyle"
            android:id="@+id/etPassword"
            android:background="@drawable/edit_text_style"
            android:hint="@string/password"
            android:textColor="@color/whiteColor"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/start_padding"
            android:drawableLeft="@drawable/password_icon"
            android:textColorHint="@color/whiteColor"
            android:paddingStart="@dimen/start_padding"
            android:paddingLeft="@dimen/start_padding"
            android:textSize="@dimen/editText_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="440dp"/>

    <Button
            android:id="@+id/btn_login"
            android:text="@string/login"
            android:textColor="@color/RedColor"
            android:textSize="@dimen/btn_size"
            android:background="@drawable/rounded_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="4dp"/>

    <TextView
            android:id="@+id/tvForgotpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textSize="@dimen/editText_size"
            android:textColor="@color/whiteColor"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="284dp"
            tools:layout_editor_absoluteX="110dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvSignUp"
            android:layout_height="wrap_content"
            android:text="@string/dont_have_an_account"
            android:textSize="@dimen/editText_size"
            android:textColor="@color/whiteColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="152dp"
            android:layout_marginLeft="36dp"/>

    <ImageView
            android:id="@+id/ivSignup"
            android:paddingTop="92dp"
            android:paddingLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="152dp"/>
</android.support.constraint.ConstraintLayout>
