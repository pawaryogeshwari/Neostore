<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
>

    <TextView
            android:id="@+id/tvProduct_name"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/blackColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
    />

    <ImageView
            android:id="@+id/ivProduct_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foregroundGravity="center"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/tvProduct_name"
    />

    <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal"
            android:isIndicator="false"
            android:layout_marginLeft="20dp"
            android:theme="@style/RatingBar"
            android:numStars="5"
            style="?android:attr/ratingBarStyle"
            android:progressTint="#EEA337"
            android:layout_below="@id/ivProduct_image">

    </RatingBar>
    <Button
            android:id="@+id/btn_RateNow"
            android:text="Rate Now"
            android:textColor="@color/whiteColor"
            android:background="@drawable/buynow"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:layout_marginBottom="20dp"
    />
</RelativeLayout>